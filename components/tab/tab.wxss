.tab{
	display: flex;
	width: 100%;
	background-color: #fff;
}
.tab .tab-item{
	display: flex;
	flex: 1;
	justify-content: center;
	align-items: center;
	padding: 30rpx 0;
	position: relative;
}
.tab-line{
	position: absolute;
	width: 65%;
	height: -1;
	border-bottom: 3px solid red;
	bottom: 0;
}
.tab-default{
	background-color: #f3f3f3;
}