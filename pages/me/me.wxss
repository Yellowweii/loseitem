.body{
	height: 100vh;
}
.unlogin{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding-top: 40%;
}
.unlogin .btn{
		margin-top: 50rpx;
		width: 80%;
		background-color: #ff70b4;
		color: white;
		height: 100rpx;
		text-align: center;
}
.info{
	background-color: #ff70b4;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	padding: 80rpx 0;
}
.info .txt{
	margin-top: 30rpx;
	color: white;
}
.cell{
	display: flex;
	flex-direction: column;
	align-items: center;
	transform: translateY(-30rpx);
}
.cell-item{
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 85%;
	background-color: #fff;
	padding: 30rpx 20rpx;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
}
.cell-left{
	display: flex;
	justify-content: center;
	align-items: center;
}
.cell-item .img{
	width: 60rpx;
	height: 60rpx;
}
.cell-item .txt{
	margin-left: 20rpx;
}