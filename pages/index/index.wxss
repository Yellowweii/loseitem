.search{
	height: 100rpx;
	background-color: #fff;
	display: flex;
	justify-content: center;
	align-items: center;
}
.search-content{
		height: 80rpx;
		background-color: #f3f3f3;
		width: 90%;
		border-radius: 40rpx;
		color: #000;
		display: flex;
		justify-content: center;
		align-items: center;
}
.search-content image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 10rpx;
}
swiper{
	height: 400rpx;
}
swiper-item image{
	width: 100%;
	height: 400rpx;
}
.tab{
	display: flex;
	width: 100%;
	background-color: #fff;
}
.tab .tab-item{
	display: flex;
	flex: 1;
	justify-content: center;
	align-items: center;
	padding: 30rpx 0;
	position: relative;
}
.tab-line{
	position: absolute;
	width: 65%;
	height: -1;
	border-bottom: 3px solid red;
	bottom: 0;
}
.tab-default{
	background-color: #f3f3f3;
}
.lose{
	width: 100%;
	display: flex;
	flex-direction: column;
}
.lose-item{
	width: 100%;
	display: flex;
	padding: 20rpx;
	background-color: #fff;
	margin-bottom: 5rpx;
}
.lose-item .img{
	width: 250rpx;
	height: 250rpx;
	min-width: 250rpx;
}
.lose-item .lose-content{
		display: flex;
		flex-direction: column;
		margin-left: 10rpx;
}
.lose-content .name{
	font-weight: 700;
}
.lose-content .place{
	margin-top: 35rpx;
}
.lose-content .place,.time,.desc{
	font-size: 26rpx;
	margin-bottom: 5rpx;
}
.lose-content .desc{
	max-width: 400rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	color: #666;
}
.lose-content .publish-time{
	margin-top: 30rpx;
	margin-left: 200rpx;
	color: #666;
	font-size: 26rpx;
}
.body{
	padding-bottom: 100rpx;
}
