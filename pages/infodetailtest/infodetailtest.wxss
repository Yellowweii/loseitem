swiper{
	height: 60vh;
}
swiper-item image{
	width: 100%;
	height: 60vh;
}
.name{
	background-color: #fff;
	font-weight: 700;
	margin-top: 20rpx;
	padding: 20rpx;
}
.container{
	background-color: #fff;
	margin-top: 20rpx;
	display: flex;
	flex-direction: column;
}
.container .item{
	padding: 20rpx;
	display: flex;
	align-items: center;
}
.container .item .label{
	max-width: 70rpx;
	color: #999;
	margin-right: 20rpx;
}
.bottom{
	display: flex;
	background-color: #fff;
	justify-content: space-between;
	padding: 20rpx 40rpx;
	align-items: center;
	margin-top: 20rpx;
}
.bottom-left{
	display: flex;
	background-color: #f3f3f3;
	border-radius: 30rpx;
	padding: 18rpx;
	width: 70%;
}
.bottom-left .img{
	width: 40rpx;
	height: 40rpx;
	margin-left: 20rpx;
	margin-right: 10rpx;
}
.bottom-right{
	display: flex;
	flex-direction: column;
	align-items: center;
}